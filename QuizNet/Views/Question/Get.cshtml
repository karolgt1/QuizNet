@model QuizNet.BusinessLogic.DTOs.QuestionDto
@{
    ViewData["Title"] = "Get";
}

<h1>@Model.Text</h1>
<i>Created at @Model.Time</i>
<br />
<br/>
<ul class="list-group">
    @for (int i = 0; i < Model.Answers.Length; i++)
    {
        if(Model.Answers[i].IsCorrect)
        {
            <li class="list-group-item active">@Model.Answers[i].Text</li>
        }
        else
        {
            <li class="list-group-item">@Model.Answers[i].Text</li>
        }

    }
</ul>
